<div class='p-4'>
  <form class='flex justify-end p-4'>
    <div class='flex items-center border-b border-b-2 border-teal py-2'>
      {{input
        value=searchInput
        class='appearance-none bg-transparent border-none w-full text-grey-darker mr-3 py-1 px-2'
        type='text'
        placeholder='Enter an account'
        aria-label='GitHub Username'}}
      <button {{action 'performSearch' searchInput}} class='flex-no-shrink bg-teal hover:bg-teal-dark border-teal hover:border-teal-dark text-sm border-4 text-white py-1 px-2 rounded'>
        Search
      </button>
    </div>
  </form>

  <div class='bg-white mx-auto max-w-sm shadow-lg rounded-lg overflow-hidden'>
    <div class='sm:flex sm:items-center px-6 py-4'>
      <img class='block h-16 sm:h-24 rounded-full mx-auto mb-4 sm:mb-0 sm:mr-4 sm:ml-0' src={{user.avatarUrl}} alt=''>
      <div class='text-center sm:text-left sm:flex-grow'>
        <div class='mb-4'>
          <p class='text-xl leading-tight'>{{user.login}}</p>
          <p class='text-sm leading-tight text-grey-dark'>{{user.name}}</p>
          <p class='text-sm leading-tight text-grey-dark'>{{user.location}}</p>
        </div>
      </div>
    </div>

    {{#each user.repositories as |repo|}}
      {{repository-card name=repo.fullName
        stars=repo.stargazersCount
        forks=repo.forksCount}}
    {{/each}}
  </div>
</div>
